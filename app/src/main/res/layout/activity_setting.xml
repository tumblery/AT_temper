<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#32C1E5"
    android:orientation="vertical"
    tools:context="com.example.hack2.temper_info.MainActivity"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="#32C1E5"
            android:scaleType="centerInside"
            android:src="@drawable/home_btn"
            android:id ="@+id/home_btn_mainpg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:gravity="right"
            android:text="Check Temperature" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:background="#32C1E5"
        android:src="@drawable/App_icon" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_height="43dp"
            android:layout_centerHorizontal="true"
            android:background="#32C1E5"
            android:scaleType="centerInside"
            android:src="@drawable/main_btn"
            android:id="@+id/main_btn_settingpg"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Select range of temperature" />
    <ImageView
        android:id="@+id/imageView_mainpg"
        android:layout_width="640dip"
        android:layout_height="480dip"
        android:background="#FFFFFF"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />



</LinearLayout>